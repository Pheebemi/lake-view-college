# Production .env example – copy to .env on the server and fill in real values.
# Do NOT commit .env to git.

# Django – REQUIRED CHANGES FOR PRODUCTION
DJANGO_SECRET_KEY=generate-a-new-random-key-for-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database – PostgreSQL (from cPanel)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=lakerefy_lakeview
DATABASE_USER=lakerefy_dbuser
DATABASE_PASSWORD=your_actual_db_password_from_cpanel
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Static and Media
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# Paystack – use LIVE keys for real payments
PAYSTACK_SECRET_KEY=sk_live_xxxx
PAYSTACK_PUBLIC_KEY=pk_live_xxxx

# Security – enable for HTTPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Optional (defaults are fine)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_TZ=True
